@page
@model application_web.Pages.ImagerieModel
@{
    ViewData["Title"] = "Imagerie Médicale";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Clinique de La Madeleine</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            color: #333;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f0f8ff;
            height:2400px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .imagerie-header {
            background: linear-gradient(135deg, #00bcd4, #006064);
            color: white;
            padding: 60px 0;
            text-align: center;
        }

        .imagerie-header h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .imagerie-content {
            display: flex;
            justify-content: space-between;
            margin: 60px 0;
        }

        .services-list, .equipment-list {
            flex-basis: 48%;
        }

        .services-list h2, .equipment-list h2 {
            color: #006064;
            margin-bottom: 20px;
        }

        .service-item, .equipment-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .service-item i, .equipment-item i {
            font-size: 1.5rem;
            color: #00bcd4;
            margin-right: 15px;
            width: 30px;
        }

        .image-gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin-top: 40px;
        }

        .image-item {
            flex-basis: 48%;
            margin-bottom: 20px;
        }

        .image-item img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .appointment-section {
            background-color: #e0f7fa;
            padding: 40px;
            border-radius: 10px;
            margin-top: 60px;
        }

        .appointment-section h2 {
            color: #006064;
            margin-bottom: 20px;
        }

        .btn-appointment {
            background-color: #00bcd4;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn-appointment:hover {
            background-color: #008ba3;
        }

        @@media (max-width: 768px) {
            .imagerie-content, .image-gallery {
                flex-direction: column;
            }
            .services-list, .equipment-list, .image-item {
                flex-basis: 100%;
                margin-bottom: 40px;
            }
        }
    </style>
</head>
<body>
    <header class="imagerie-header">
        <div class="container">
            <h1>Imagerie Médicale</h1>
            <p>Des technologies de pointe pour un diagnostic précis et rapide.</p>
        </div>
    </header>

    <main class="container">
        <div class="imagerie-content">
            <div class="services-list">
                <h2>Nos Services d'Imagerie</h2>
                <div class="service-item">
                    <i class="fas fa-x-ray"></i>
                    <p>Radiographie numérique</p>
                </div>
                <div class="service-item">
                    <i class="fas fa-wave-square"></i>
                    <p>Échographie</p>
                </div>
                <div class="service-item">
                    <i class="fas fa-magnet"></i>
                    <p>IRM (Imagerie par Résonance Magnétique)</p>
                </div>
                <div class="service-item">
                    <i class="fas fa-brain"></i>
                    <p>Scanner (Tomodensitométrie)</p>
                </div>
                <div class="service-item">
                    <i class="fas fa-heartbeat"></i>
                    <p>Mammographie</p>
                </div>
            </div>
            <div class="equipment-list">
                <h2>Notre Équipement</h2>
                <div class="equipment-item">
                    <i class="fas fa-laptop-medical"></i>
                    <p>Scanner multidétecteur de dernière génération</p>
                </div>
                <div class="equipment-item">
                    <i class="fas fa-microscope"></i>
                    <p>IRM 3 Tesla haute résolution</p>
                </div>
                <div class="equipment-item">
                    <i class="fas fa-stethoscope"></i>
                    <p>Échographes polyvalents avec sondes 3D/4D</p>
                </div>
                <div class="equipment-item">
                    <i class="fas fa-hospital"></i>
                    <p>Mammographe numérique avec tomosynthèse</p>
                </div>
            </div>
        </div>
        
        <div class="image-gallery">
            <div class="image-item">
                <img src="~/images/scanner.jpg" alt="Équipement d'imagerie 1">
            </div>
            <div class="image-item">
                <img src="~/images/radio.jpg" alt="Équipement d'imagerie 2">
            </div>
            <div class="image-item">
                <img src="~/images/echo.jpg" alt="Salle d'examen 1">
            </div>
            <div class="image-item">
                <img src="/images/imagerie.jpg" alt="Salle d'examen 2">
            </div>
        </div>

        <div class="appointment-section">
            <h2>Prendre Rendez-vous</h2>
            <p>Pour planifier votre examen d'imagerie, veuillez nous contacter ou utiliser notre système de réservation en ligne.</p>
            <button class="btn-appointment">Prendre Rendez-vous</button>
        </div>
    </main>
</body>
</html>