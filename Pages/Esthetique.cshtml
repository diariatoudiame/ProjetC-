@page
@model application_web.Pages.EsthetiqueModel
@{
    ViewData["Title"] = "Esthétique Médicale";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Clinique de La Madeleine</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            color: #333;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f0f8ff;
            height: 2600px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .esthetique-header {
            background: linear-gradient(135deg, #00bcd4, #006064);
            color: white;
            padding: 60px 0;
            text-align: center;
        }

        .esthetique-header h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .esthetique-content {
            display: flex;
            flex-direction: column;
            margin: 60px 0;
        }

        .services-section, .equipe-section {
            margin-bottom: 40px;
        }

        h2 {
            color: #006064;
            margin-bottom: 20px;
            text-align: center;
        }

        .services-grid, .equipe-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .service-item, .equipe-item {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
        }

        .service-item i, .equipe-item i {
            font-size: 2rem;
            color: #00bcd4;
            margin-bottom: 15px;
        }

        .image-section {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
        }

        .image-item {
            flex-basis: 48%;
        }

        .image-item img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .appointment-section {
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            margin-top: 60px;
            text-align: center;
        }

        .btn-appointment {
            background-color: #00bcd4;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn-appointment:hover {
            background-color: #008ba3;
        }

        @@media (max-width: 768px) {
            .services-grid, .equipe-grid, .image-section {
                grid-template-columns: 1fr;
            }

            .image-item {
                flex-basis: 100%;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <header class="esthetique-header">
        <div class="container">
            <h1>Esthétique Médicale</h1>
            <p>Des soins avancés pour révéler votre beauté naturelle.</p>
        </div>
    </header>

    <main class="container">
        <div class="esthetique-content">
            <section class="services-section">
                <h2>Nos Services Esthétiques</h2>
                <div class="services-grid">
                    <div class="service-item">
                        <i class="fas fa-syringe"></i>
                        <h3>Injections de Botox</h3>
                        <p>Réduction des rides d'expression</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-magic"></i>
                        <h3>Comblement des Rides</h3>
                        <p>Restauration du volume facial</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-laser"></i>
                        <h3>Traitements Laser</h3>
                        <p>Rajeunissement et resurfaçage de la peau</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-tint"></i>
                        <h3>Peeling Chimique</h3>
                        <p>Amélioration de la texture de la peau</p>
                    </div>
                </div>
            </section>

            <section class="equipe-section">
                <h2>Notre Équipe Esthétique</h2>
                <div class="equipe-grid">
                    <div class="equipe-item">
                        <i class="fas fa-user-md"></i>
                        <h3>Médecins Esthétiques</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-user-nurse"></i>
                        <h3>Infirmières Spécialisées</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-hands"></i>
                        <h3>Esthéticiennes Médicales</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-microscope"></i>
                        <h3>Dermatologues</h3>
                    </div>
                </div>
            </section>

            <section class="image-section">
                <div class="image-item">
                    <img src="~/images/est.jpg" alt="Consultation esthétique" style="height:365px">
                </div>
                <div class="image-item">
                    <img src="~/images/laser.jpg" alt="Traitement laser" style="height:365px">
                </div>
            </section>
            <section class="image-section">
                <div class="image-item">
                    <img src="~/images/inj.jpg" alt="Injection de Botox" style="height:365px">
                </div>
                <div class="image-item">
                    <img src="~/images/ple.jpg" alt="Peeling chimique" style="height:365px">
                </div>
            </section>

            <section class="appointment-section">
                <h2>Prendre Rendez-vous</h2>
                <p>Pour planifier une consultation en esthétique médicale ou obtenir plus d'informations, veuillez nous contacter.</p>
                <a href="/Rv">
                    <button class="btn-appointment">Prendre Rendez-vous</button>

                </a>
            </section>
        </div>
    </main>
</body>
</html>