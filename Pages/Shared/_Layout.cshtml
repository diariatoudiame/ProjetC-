<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinique Madeleine</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/application_web.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2c3e50;
        }

        body {
            height: 2200px;
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex: 1 0 auto;
        }

        .navbar {
            background-color: var(--primary-color) !important;
            padding: 0px 0;
        }

        .navbar-brand {
            color: white !important;
            font-size: 24px;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-size: 18px;
            margin-left: 20px;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: var(--secondary-color) !important;
                transform: translateY(-2px);
            }

        .footer {
            background-color: var(--secondary-color);
            color: white;
            flex-shrink: 0;
            padding: 20px 0;
        }

            .footer h5 {
                color: white;
                margin-bottom: 15px;
            }

            .footer ul {
                padding-left: 0;
                list-style: none;
            }

                .footer ul li {
                    margin-bottom: 10px;
                }

                    .footer ul li a {
                        color: #00bfff;
                        text-decoration: none;
                    }

                        .footer ul li a:hover {
                            text-decoration: underline;
                        }

        .social-icons {
            font-size: 24px;
        }

            .social-icons a {
                margin: 0 10px;
                color: white;
                transition: all 0.3s ease;
            }

                .social-icons a:hover {
                    color: #00bfff;
                    transform: translateY(-3px);
                }

        .address p {
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <i class="fas fa-hospital-alt mr-2"></i> Clinique Madeleine
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1" style="margin-left:200px">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index" style="margin-left:30px"><i class="fas fa-home mr-1"></i> Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/About" style="margin-left:30px">
                                    <i class="fas fa-info-circle mr-1"></i> À propos de Nous
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Services" style="margin-left:30px"><i class="fas fa-stethoscope mr-1"></i> Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Contact" style="margin-left:30px"><i class="fas fa-envelope mr-1"></i> Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>Liens rapides</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-page="/Index">Accueil</a></li>
                        <li><a asp-area="" asp-page="/Services">Services</a></li>
                        <li><a asp-area="" asp-page="/Contact">Contact</a></li>
                        <li><a asp-area="" asp-page="/Privacy">Confidentialité</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Suivez-nous</h5>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-6">
                    <h5>Contactez-nous</h5>
                    <address>
                        <p>18 Av des Jambaars</p>
                        <p>BP 3500 DAKAR</p>
                        <p>Tél: +221 33 889 94 70</p>
                    </address>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <p>&copy; 2023 Clinique de La Madeleine - Tous droits réservés | Conçu par Groupe1 </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
