@page
@model application_web.Pages.ChirurgieModel
@{
    ViewData["Title"] = "Chirurgie";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Clinique de La Madeleine</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            color: #333;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f0f8ff;
            height: 2600px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .chirurgie-header {
            background: linear-gradient(135deg, #00bcd4, #006064);
            color: white;
            padding: 60px 0;
            text-align: center;
        }

        .chirurgie-header h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .chirurgie-content {
            display: flex;
            flex-direction: column;
            margin: 60px 0;
        }

        .specialites-section, .equipe-section {
            margin-bottom: 40px;
        }

        h2 {
            color: #006064;
            margin-bottom: 20px;
            text-align: center;
        }

        .specialites-grid, .equipe-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .specialite-item, .equipe-item {
            background-color: #e0f7fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
        }

        .specialite-item i, .equipe-item i {
            font-size: 2rem;
            color: #00bcd4;
            margin-bottom: 15px;
        }

        .image-section {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
        }

        .image-item {
            flex-basis: 48%;
        }

        .image-item img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .appointment-section {
            background-color: #e0f7fa;
            padding: 40px;
            border-radius: 10px;
            margin-top: 60px;
            text-align: center;
        }

        .btn-appointment {
            background-color: #00bcd4;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn-appointment:hover {
            background-color: #008ba3;
        }

        @@media (max-width: 768px) {
            .specialites-grid, .equipe-grid, .image-section {
                grid-template-columns: 1fr;
            }
            .image-item {
                flex-basis: 100%;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <header class="chirurgie-header">
        <div class="container">
            <h1>Chirurgie</h1>
            <p>Des interventions chirurgicales de pointe pour votre santé et votre bien-être.</p>
        </div>
    </header>

    <main class="container">
        <div class="chirurgie-content">
            <section class="specialites-section">
                <h2>Nos Spécialités Chirurgicales</h2>
                <div class="specialites-grid">
                    <div class="specialite-item">
                        <i class="fas fa-heart"></i>
                        <h3>Chirurgie Cardiaque</h3>
                        <p>Interventions sur le cœur et les vaisseaux</p>
                    </div>
                    <div class="specialite-item">
                        <i class="fas fa-brain"></i>
                        <h3>Neurochirurgie</h3>
                        <p>Opérations du cerveau et du système nerveux</p>
                    </div>
                    <div class="specialite-item">
                        <i class="fas fa-bone"></i>
                        <h3>Chirurgie Orthopédique</h3>
                        <p>Traitement des problèmes musculo-squelettiques</p>
                    </div>
                    <div class="specialite-item">
                        <i class="fas fa-eye"></i>
                        <h3>Chirurgie Ophtalmologique</h3>
                        <p>Interventions sur les yeux</p>
                    </div>
                </div>
            </section>

            <section class="equipe-section">
                <h2>Notre Équipe Chirurgicale</h2>
                <div class="equipe-grid">
                    <div class="equipe-item">
                        <i class="fas fa-user-md"></i>
                        <h3>Chirurgiens Expérimentés</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-user-nurse"></i>
                        <h3>Infirmiers Spécialisés</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-procedures"></i>
                        <h3>Anesthésistes Qualifiés</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-hospital-user"></i>
                        <h3>Équipe de Soins Postopératoires</h3>
                    </div>
                </div>
            </section>

            <section class="image-section">
                <div class="image-item">
                    <img src="~/images/c.jpg" alt="Salle d'opération">
                </div>
                <div class="image-item">
                    <img src="~/images/de.jpg" alt="Équipe chirurgicale" style="height:365px">
                </div>
            </section>
            <section class="image-section">
                <div class="image-item">
                    <img src="~/images/aa.jpg" alt="Équipement chirurgical" style="height:365px">
                </div>
                <div class="image-item">
                    <img src="~/images/ss.jpg" alt="Consultation préopératoire" style="height:365px">
                </div>
            </section>

            <section class="appointment-section">
                <h2>Prendre Rendez-vous</h2>
                <p>Pour planifier une consultation chirurgicale ou obtenir plus d'informations, veuillez nous contacter.</p>
                <a href="/Rv">
                    <button class="btn-appointment">Prendre Rendez-vous</button>

                </a>
            </section>
        </div>
    </main>
</body>
</html>