@page
@model application_web.Pages.LaboModel
@{
    ViewData["Title"] = "Laboratoire";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Clinique de La Madeleine</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            color: #333;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f0f8ff;
            height: 2600px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .labo-header {
            background: linear-gradient(135deg, #00bcd4, #006064);
            color: white;
            padding: 60px 0;
            text-align: center;
        }

        .labo-header h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .labo-content {
            display: flex;
            flex-direction: column;
            margin: 60px 0;
        }

        .services-section, .equipe-section {
            margin-bottom: 40px;
        }

        h2 {
            color: #006064;
            margin-bottom: 20px;
            text-align: center;
        }

        .services-grid, .equipe-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .service-item, .equipe-item {
            background-color: #e0f7fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
        }

        .service-item i, .equipe-item i {
            font-size: 2rem;
            color: #00bcd4;
            margin-bottom: 15px;
        }

        .image-section {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
        }

        .image-item {
            flex-basis: 48%;
        }

        .image-item img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .appointment-section {
            background-color: #e0f7fa;
            padding: 40px;
            border-radius: 10px;
            margin-top: 60px;
            text-align: center;
        }

        .btn-appointment {
            background-color: #006064;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn-appointment:hover {
            background-color: #004d40;
        }

        @@media (max-width: 768px) {
            .services-grid, .equipe-grid, .image-section {
                grid-template-columns: 1fr;
            }
            .image-item {
                flex-basis: 100%;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <header class="labo-header">
        <div class="container">
            <h1>Laboratoire</h1>
            <p>Des analyses précises pour un diagnostic fiable.</p>
        </div>
    </header>

    <main class="container">
        <div class="labo-content">
            <section class="services-section">
                <h2>Nos Services de Laboratoire</h2>
                <div class="services-grid">
                    <div class="service-item">
                        <i class="fas fa-vial"></i>
                        <h3>Analyses de Sang</h3>
                        <p>Examens sanguins complets et spécialisés</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-flask"></i>
                        <h3>Tests Biochimiques</h3>
                        <p>Analyses des composants chimiques du corps</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-microscope"></i>
                        <h3>Microbiologie</h3>
                        <p>Identification des micro-organismes pathogènes</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-dna"></i>
                        <h3>Tests Génétiques</h3>
                        <p>Analyses ADN pour le diagnostic et la prévention</p>
                    </div>
                </div>
            </section>

            <section class="equipe-section">
                <h2>Notre Équipe de Laboratoire</h2>
                <div class="equipe-grid">
                    <div class="equipe-item">
                        <i class="fas fa-user-md"></i>
                        <h3>Biologistes Médicaux</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-user-nurse"></i>
                        <h3>Techniciens de Laboratoire</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-microscope"></i>
                        <h3>Microbiologistes</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-laptop-medical"></i>
                        <h3>Spécialistes en Bio-informatique</h3>
                    </div>
                </div>
            </section>

            <section class="image-section">
                <div class="image-item">
                    <img src="~/images/analyse_sang.jpg" alt="Analyse de sang" style="height:365px">
                </div>
                <div class="image-item">
                    <img src="~/images/equipement_laboratoire.jpg" alt="Équipement de laboratoire" style="height:365px">
                </div>
            </section>
            <section class="image-section">
                <div class="image-item">
                    <img src="~/images/microscope_analyse.jpg" alt="Analyse au microscope" style="height:365px">
                </div>
                <div class="image-item">
                    <img src="~/images/technicien_laboratoire.jpg" alt="Technicien de laboratoire" style="height:365px">
                </div>
            </section>

            <section class="appointment-section">
                <h2>Prendre Rendez-vous</h2>
                <p>Pour planifier un rendez-vous pour des analyses ou obtenir plus d'informations, veuillez nous contacter.</p>
                <button class="btn-appointment">Prendre Rendez-vous</button>
            </section>
        </div>
    </main>
</body>
</html>
