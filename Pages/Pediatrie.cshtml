@page
@model application_web.Pages.PediatrieModel
@{
    ViewData["Title"] = "Pédiatrie";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Clinique de La Madeleine</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            color: #333;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f0f8ff;
            height: 2600px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .pediatrie-header {
            background: linear-gradient(135deg, #00bcd4, #006064);
            color: white;
            padding: 60px 0;
            text-align: center;
        }

        .pediatrie-header h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .pediatrie-content {
            display: flex;
            flex-direction: column;
            margin: 60px 0;
        }

        .services-section, .equipe-section {
            margin-bottom: 40px;
        }

        h2 {
            color: #006064;
            margin-bottom: 20px;
            text-align: center;
        }

        .services-grid, .equipe-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .service-item, .equipe-item {
            background-color: #e0f7fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
        }

        .service-item i, .equipe-item i {
            font-size: 2rem;
            color: #00bcd4;
            margin-bottom: 15px;
        }

        .image-section {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
        }

        .image-item {
            flex-basis: 48%;
        }

        .image-item img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .appointment-section {
            background-color: #e0f7fa;
            padding: 40px;
            border-radius: 10px;
            margin-top: 60px;
            text-align: center;
        }

        .btn-appointment {
            background-color: #00bcd4;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn-appointment:hover {
            background-color: #008ba3;
        }

        @@media (max-width: 768px) {
            .services-grid, .equipe-grid, .image-section {
                grid-template-columns: 1fr;
            }
            .image-item {
                flex-basis: 100%;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <header class="pediatrie-header">
        <div class="container">
            <h1>Pédiatrie</h1>
            <p>Des soins spécialisés pour la santé et le bien-être de vos enfants.</p>
        </div>
    </header>

    <main class="container">
        <div class="pediatrie-content">
            <section class="services-section">
                <h2>Nos Services Pédiatriques</h2>
                <div class="services-grid">
                    <div class="service-item">
                        <i class="fas fa-stethoscope"></i>
                        <h3>Consultations Générales</h3>
                        <p>Examens de routine et suivi de croissance</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-syringe"></i>
                        <h3>Vaccinations</h3>
                        <p>Programme complet de vaccination</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-heartbeat"></i>
                        <h3>Urgences Pédiatriques</h3>
                        <p>Soins d'urgence 24/7 pour les enfants</p>
                    </div>
                    <div class="service-item">
                        <i class="fas fa-brain"></i>
                        <h3>Neurologie Pédiatrique</h3>
                        <p>Diagnostic et traitement des troubles neurologiques</p>
                    </div>
                </div>
            </section>

            <section class="equipe-section">
                <h2>Notre Équipe Pédiatrique</h2>
                <div class="equipe-grid">
                    <div class="equipe-item">
                        <i class="fas fa-user-md"></i>
                        <h3>Pédiatres Spécialisés</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-user-nurse"></i>
                        <h3>Infirmiers Pédiatriques</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-hands-helping"></i>
                        <h3>Psychologues pour Enfants</h3>
                    </div>
                    <div class="equipe-item">
                        <i class="fas fa-comment-medical"></i>
                        <h3>Nutritionnistes Pédiatriques</h3>
                    </div>
                </div>
            </section>

            <section class="image-section">
                <div class="image-item">
                    <img src="~/images/ef.jpg" alt="Consultation pédiatrique" style="height:365px">
                </div>
                <div class="image-item">
                    <img src="~/images/efe.jpg" alt="Salle de jeux pédiatrique" style="height:365px">
                </div>
            </section>
            <section class="image-section">
                <div class="image-item">
                    <img src="~/images/afee.jpg" alt="Examen médical d'un enfant" style="height:365px">
                </div>
                <div class="image-item">
                    <img src="~/images/sert.jpg" alt="Vaccination pédiatrique" style="height:365px">
                </div>
            </section>

            <section class="appointment-section">
                <h2>Prendre Rendez-vous</h2>
                <p>Pour planifier une consultation pédiatrique ou obtenir plus d'informations, veuillez nous contacter.</p>
                <a href="/Rv">
                    <button class="btn-appointment">Prendre Rendez-vous</button>

                </a>
            </section>
        </div>
    </main>
</body>
</html>